@model List<OrderListModel>

<h1>Orders</h1>
<hr>

@foreach (var order in  Model)
{
    <table class="table table-bordered table-sm mb-3">
       <thead>
           <tr>
               <td colspan="2">Order Id: #@order.OrderNumber</td>
               <th>Price</th>
               <th>Quantity</th>
               <th>Approve</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var orderitem in order.OrderItems)
           {
               <tr>
                   <td><img src="~/images/@orderitem.ImageUrl" alt="" width="50"></td>
                   <td>@orderitem.Name</td>
                   <td>@orderitem.Price</td>
                   <td>@orderitem.Quantity</td>
                   <td><a href="/Cart/ApproveOrder/@order.OrderId" class="btn btn-primary">Approve</a></td>
               </tr>
           }
       </tbody>
       <tfoot>
           <tr>
               <td colspan="2">Customer Name</td>
               <td>@order.FirstName @order.LastName</td>
               <td rowspan="5">Total :@order.TotalPrice.ToString("c")</td>
           </tr>
           <tr>
               <td colspan="2">Address:</td>
               <td>@order.Address</td>
           </tr>
           <tr>
               <td colspan="2">Email:</td>
               <td>@order.Email</td>
           </tr>
           <tr>
               <td colspan="2">Phone:</td>
               <td>@order.Phone</td>
           </tr>
           <tr>
               <td colspan="2">City:</td>
               <td>@order.City</td>
           </tr>
       </tfoot> 
    </table>
}
